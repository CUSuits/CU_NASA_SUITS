<?xml version="1.0" encoding="utf-8"?>

<grammar xml:lang="en-US" root="colorChooser"
tag-format="semantics/1.0" version="1.0"
xmlns="http://www.w3.org/2001/06/grammar">

    <!-- The following three rules recognize phrases where a user describes what color an -->
    <!-- individual shape should be. For example "blue triangle" or "green circle". -->

    <rule id="triangle_Color">
        <item>
            <item>
                <ruleref uri="#Stat"/>
            </item>
            triangle
        </item>
    </rule>

    <rule id="square_Color">
        <item>
            <item>
                <ruleref uri="#SubMenu"/>
            </item>
            square
        </item>
    </rule>

    <rule id="circle_Color">
        <item>
            <item>
                <ruleref uri="#SubMenu"/>
            </item>
            circle
        </item>
    </rule>

    <!-- The following rule is the root rule. It allows the user to set the color of any permutation of one, two, or three -->
    <!-- shapes in a single phrase. The outer one-of element determines the first property spoken and then further -->
    <!-- determines whether that was the first-of-one, first-of-two, or first-of-three properties in the phrase. -->
    <!-- Twelve color names are recognized (see the rule with id "color"), therefore there are 3 * 12^1 ways of setting a single -->
    <!-- shape, 6 * 12^2 ways of setting two shapes, and 6 * 12^3 ways of setting three shapes. In total, that's -->
    <!-- 11,268 permutations. -->

    <rule id="colorChooser">
        <one-of>

            <item>
                <item>
                    <ruleref uri="#triangle_Color"/>
                    <tag> out.triangle=rules.latest(); </tag>
                </item>
                <one-of>

                    <item/>

                    <item>
                        <item>
                            <ruleref uri="#square_Color"/>
                            <tag> out.square=rules.latest(); </tag>
                        </item>
                        <item repeat="0-1">
                            <ruleref uri="#circle_Color"/>
                            <tag> out.circle=rules.latest(); </tag>
                        </item>
                    </item>

                    <item>
                        <item>
                            <ruleref uri="#circle_Color"/>
                            <tag> out.circle=rules.latest(); </tag>
                        </item>
                        <item repeat="0-1">
                            <ruleref uri="#square_Color"/>
                            <tag> out.square=rules.latest(); </tag>
                        </item>
                    </item>

                </one-of>
            </item>

            <item>
                <item>
                    <ruleref uri="#square_Color"/>
                    <tag> out.square=rules.latest(); </tag>
                </item>
                <one-of>

                    <item/>

                    <item>
                        <item>
                            <ruleref uri="#triangle_Color"/>
                            <tag> out.triangle=rules.latest(); </tag>
                        </item>
                        <item repeat="0-1">
                            <ruleref uri="#circle_Color"/>
                            <tag> out.circle=rules.latest(); </tag>
                        </item>
                    </item>

                    <item>
                        <item>
                            <ruleref uri="#circle_Color"/>
                            <tag> out.circle=rules.latest(); </tag>
                        </item>
                        <item repeat="0-1">
                            <ruleref uri="#triangle_Color"/>
                            <tag> out.triangle=rules.latest(); </tag>
                        </item>
                    </item>

                </one-of>
            </item>

            <item>
                <item>
                    <ruleref uri="#circle_Color"/>
                    <tag> out.circle=rules.latest(); </tag>
                </item>
                <one-of>

                    <item/>

                    <item>
                        <item>
                            <ruleref uri="#triangle_Color"/>
                            <tag> out.triangle=rules.latest(); </tag>
                        </item>
                        <item repeat="0-1">
                            <ruleref uri="#square_Color"/>
                            <tag> out.square=rules.latest(); </tag>
                        </item>
                    </item>

                    <item>
                        <item>
                            <ruleref uri="#square_Color"/>
                            <tag> out.square=rules.latest(); </tag>
                        </item>
                        <item repeat="0-1">
                            <ruleref uri="#triangle_Color"/>
                            <tag> out.triangle=rules.latest(); </tag>
                        </item>
                    </item>

                </one-of>
            </item>
        </one-of>
    </rule>

    <!-- The list of colors that are recognized. Assigns a semantic value to each -->
    <!-- color to give the app a standardized value in the recognition result -->

    <rule id="color">
        <one-of>
            <item>
                red <tag> out="red"; </tag>
            </item>
            <item>
                orange <tag> out="orange"; </tag>
            </item>
            <item>
                yellow <tag> out="yellow"; </tag>
            </item>
            <item>
                brown <tag> out="brown"; </tag>
            </item>
            <item>
                green <tag> out="green"; </tag>
            </item>
            <item>
                cyan <tag> out="cyan"; </tag>
            </item>
            <item>
                purple <tag> out="purple"; </tag>
            </item>
            <item>
                magenta <tag> out="magenta"; </tag>
            </item>
            <item>
                gray <tag> out="gray"; </tag>
            </item>
            <item>
                white <tag> out="white"; </tag>
            </item>
            <item>
                blue <tag> out="blue"; </tag>
            </item>
            <item>
                black <tag> out="black"; </tag>
            </item>
        </one-of>
    </rule>

    <!-- Names of all stat values Opened, Closed, Pushed, Read -->
    <rule id="Stat">
        <one-of>
          <item> suit pressure <tag> out = "suit pressure"; </tag> </item>
          <item> fan tachometer <tag> out = "fan tachometer"; </tag> </item>
          <item> internal <tag> out = "internal"; </tag> </item>
          <item> h20 <tag> out = "h20"; </tag> </item>
          <item> sublimator pressure <tag> out = "sublimator pressure"; </tag> </item>
          <item> sublimator temperature <tag> out = "sublimator temperature"; </tag> </item>
          <item> oxygen pressure <tag> out = "oxygen pressure"; </tag> </item>
          <item> oxygen rate <tag> out = "oxygen rate"; </tag> </item>
          <item> battery capacity <tag> out = "battery capacity"; </tag> </item>
          <item> water pressure <tag> ouOt = "water pressure"; </tag> </item>
          <item> water gas <tag> out = "water gas"; </tag> </item>
          <item> water liquid <tag> out = "water liquid"; </tag> </item>
          <item> water vapor <tag> out = "water vapor"; </tag> </item>

          <item> secondary oxygen rate <tag> out = "secondary oxygen rate"; </tag> </item>
          <item> secondary oxygen pressure <tag> out = "secondary oxygen pressure"; </tag> </item>
        </one-of>
    </rule>

    <!-- Names of all submenus to be Opened,Closed -->
    <rule id="SubMenu">
        <one-of>
          <item> int <tag> out = "Int"; </tag> </item>
          <item> misc <tag> out = "Misc"; </tag> </item>
          <item> sub <tag> out = "Sub"; </tag> </item>
          <item> sop <tag> out = "SOP"; </tag> </item>
          <item> h20 <tag> out = "H20"; </tag> </item>
          <item> default <tag> out = "Default"; </tag> </item>
          <item> keywords <tag> out = "Keywords"; </tag> </item>
        </one-of>
    </rule>
    
</grammar>